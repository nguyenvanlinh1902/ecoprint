{
  "name": "b2b-manager",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "frontend:dev": "yarn workspace @b2b/frontend dev",
    "frontend:build": "yarn workspace @b2b/frontend build",
    "functions:dev": "yarn workspace @b2b/functions dev",
    "functions:deploy": "yarn workspace @b2b/functions deploy",
    "shared:build": "yarn workspace @b2b/shared build",
    "dev": "concurrently \"yarn frontend:dev\" \"yarn functions:dev\"",
    "build": "yarn shared:build && yarn frontend:build",
    "deploy": "yarn build && yarn functions:deploy",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "firebase-tools": "^12.8.0"
  }
} 